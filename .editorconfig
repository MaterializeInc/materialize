[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 100

[COMMIT_EDITMSG]
max_line_length = 72

[*.md]
max_line_length = 80

[*.js]
indent_size = 2

[*.jsx]
indent_size = 2

[*.ts]
indent_size = 2

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.html]
indent_size = 2

[Makefile]
indent_style = tab
