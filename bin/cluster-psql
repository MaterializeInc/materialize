# cluster-psql â€” connect to materialized in Minikube (as deployed by cluster-dev).

kubectl apply --context=minikube -f - <<EOF
apiVersion: v1
kind: Pod
metadata:
  name: psql
  namespace: default
spec:
  containers:
  - name: psql
    image: materialize/psql
    args: [postgres://materialize:materialize@materialized.default.svc.cluster.local/materialize]
EOF
kubectl wait --for=condition=ready pod psql
kubectl exec -it psql -- psql postgres://materialize:materialize@materialized.default.svc.cluster.local:6875/materialize
