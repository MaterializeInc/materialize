# fmt â€” formats Rust and Python code as well as Protobuf files.

set -euo pipefail

cd "$(dirname "$0")/.."

. misc/shlib/shlib.bash

try cargo fmt
try bin/bazel fmt
try buf format src -w

if [[ ! "${MZDEV_NO_PYTHON:-}" ]]; then
  bin/pyfmt
fi

try_status_report
