# {materialized,sqllogictest} â€” build and run $0 and its constituent services.

set -euo pipefail

. misc/shlib/shlib.bash

bin=$(basename "$0")
release=false
build_flags=()

if [[ "${1:-}" = --release ]]; then
    shift
    release=true
    build_flags+=(--release)
fi

cargo build "${build_flags[@]}" --bin storaged --bin computed --bin "$bin"
if $release; then
    target/release/"$bin" "$@"
else
    target/debug/"$bin" "$@"
fi
