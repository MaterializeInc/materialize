# {materialized,sqllogictest} â€” build and run $0 and its constituent services.

set -euo pipefail

. misc/shlib/shlib.bash

bin=$(basename "$0")
release=false
channel=
build_flags=()
positional_args=()
rustflags=""

while [[ $# -gt 0 ]]; do
    case $1 in
        --release)
            release=true
            build_flags+=("$1")
            shift
            ;;
        +*)
            channel="$1"
            shift
            ;;
        --timings|--no-default-features)
            build_flags+=("$1")
            shift
            ;;
        --tokio-console)
            build_flags+=("--features=tokio-console")
            positional_args+=("--tokio-console")
            rustflags="--cfg=tokio_unstable"
            shift
            ;;
        *)
            positional_args+=("$1")
            shift
            ;;
    esac
done

${rustflags:+"RUSTFLAGS=$rustflags"} cargo ${channel:+"$channel"} build "${build_flags[@]}" --bin storaged --bin computed --bin "$bin"
if $release; then
    target/release/"$bin" "${positional_args[@]}"
else
    target/debug/"$bin" "${positional_args[@]}"
fi
