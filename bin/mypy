# mypy â€” runs the mypy type checker on Python source files.

set -euo pipefail

root=$(cd "$(dirname "$0")/.." && pwd)

# shellcheck source=SCRIPTDIR/../misc/shlib/shlib.bash
. "$root"/misc/shlib/shlib.bash

py_files=
mapfile_shim py_files < <(git ls-files "ci/*.py" "misc/python/*.py")

set -x

exec "$root"/bin/pyactivate --dev -m mypy --pretty "${py_files[@]}"
