# mzconduct â€” conduct the runtime behavior of composed containers

set -euo pipefail

cd "$(dirname "$0")/.."

. misc/shlib/shlib.bash

red "WARNING: mzconduct has been merged into mzcompose; this script will be removed soon\n" >&2
echo 'hint: cd into the test directory and run ./mzcompose run WORKFLOW instead'

if [[ "${1:-}" != run ]]; then
    die "compatiblity shim only supports 'run' command"
fi
shift

test=
workflow=
workflow_next=false
for arg; do
    if $workflow_next; then
        workflow_next=false
        workflow=$arg
        continue
    fi
    case "$arg" in
        --workflow=*) workflow=${arg#--workflow=} ;;
        --workflow|-w) workflow_next=true ;;
        -*) die "unknown option $arg" ;;
        *)
            if [[ "$test" ]]; then
                die "specifying more than one test is not permitted"
            fi
            test=$arg
        ;;
    esac
done

if [[ ! "$workflow" ]]; then
    die "missing required option --workflow"
fi

case "$test" in
    "billing")      cd demo/billing ;;
    "chaos")        cd test/chaos ;;
    "chbench")      cd demo/chbench ;;
    "perf-kinesis") cd test/performance/perf-kinesis ;;
    *)              die "unknown test $test" ;;
esac

exec ./mzcompose run "$workflow"
