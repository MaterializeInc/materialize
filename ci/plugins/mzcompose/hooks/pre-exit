set -euo pipefail

echo "~~~ :docker: Cleaning up after mzcompose" >&2

run() {
    bin/ci-builder run stable bin/mzcompose --mz-quiet --mz-find "$BUILDKITE_PLUGIN_MZCOMPOSE_COMPOSITION" "$@"
}

run kill
run rm --force -v
run down --volumes
