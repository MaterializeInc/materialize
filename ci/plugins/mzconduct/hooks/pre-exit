set -euo pipefail

echo "~~~ :docker: Cleaning up after mzconduct" >&2

compose_file="$(mzcompose show dir "$BUILDKITE_PLUGIN_MZCOMPOSE_TEST")/mzcompose.yml"

run() {
    bin/ci-builder run stable bin/mzcompose --mz-quiet -f "$compose_file" "$@"
}

run kill
run rm --force -v
run down --volumes
