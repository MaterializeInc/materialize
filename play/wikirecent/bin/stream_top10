set -euo pipefail

MTRLZ_GIT_ROOT="${MTRLZ_GIT_ROOT:-$(git rev-parse --show-toplevel)}"
if [[ "${PWD}" != "${MTRLZ_GIT_ROOT}" ]]; then
    cd "${MTRLZ_GIT_ROOT}"
fi

if ! port=$(./bin/mzconduct list-port wikirecent app); then
    echo "ERROR: Failed to determine port for the web server"
    exit 1
fi

./play/wikirecent/extras/async_stream_top10.py -p "${port}" top10
