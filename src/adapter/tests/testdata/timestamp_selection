# Test AS OF AT LEAST
set-oracle
15
----

determine
{
  "timeline_ctx": "timeline dependent",
  "id_bundle": {
    "compute_ids": {
      "s1": [
        "s10"
      ]
    }
  },
  "when": "AtLeastTimestamp:5",
  "instance": "s1"
}
----
10

set-isolation
strong session serializable
----

set-oracle
15
----

# Immediately: since < oracle < (upper-1) -> oracle

determine
{
  "timeline_ctx": "timeline dependent",
  "id_bundle": {
    "compute_ids": {
      "s1": [
        "s10"
      ]
    }
  },
  "when": "Immediately",
  "instance": "s1"
}
----
15

# FreshestTableWrite: since < oracle -> oracle

determine
