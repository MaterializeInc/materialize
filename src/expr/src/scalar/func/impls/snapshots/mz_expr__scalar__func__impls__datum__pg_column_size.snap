fn pg_column_size<'a>(a: Datum<'a>) -> Result<Option<i32>, EvalError> {
    match a {
        Datum::Null => Ok(None),
        datum => {
            let sz = mz_repr::datum_size(&datum);
            i32::try_from(sz)
                .map(Some)
                .or_else(|_| Err(EvalError::Int32OutOfRange(sz.to_string().into())))
        }
    }
}
