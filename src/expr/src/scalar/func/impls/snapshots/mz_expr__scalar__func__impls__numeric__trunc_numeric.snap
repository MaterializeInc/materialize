fn trunc_numeric(mut a: Numeric) -> Numeric {
    if a.exponent() >= 0 {
        return a;
    }
    let mut cx = numeric::cx_datum();
    cx.set_rounding(Rounding::Down);
    cx.round(&mut a);
    numeric::munge_numeric(&mut a).unwrap();
