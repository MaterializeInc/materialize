fn array_length<'a>(a: Array<'a>, b: i64) -> Result<Option<i32>, EvalError> {
    let i = match usize::try_from(b) {
        Ok(0) | Err(_) => return Ok(None),
        Ok(n) => n - 1,
    };
    Ok(
        match a.dims().into_iter().nth(i) {
            None => None,
            Some(dim) => {
                Some(
                    dim
                        .length
                        .try_into()
                        .map_err(|_| EvalError::Int32OutOfRange(
                            dim.length.to_string().into(),
                        ))?,
                )
            }
        },
    )
}
