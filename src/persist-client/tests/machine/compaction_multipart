# Compaction with multipart inputs and outputs

write-batch output=b0 lower=0 upper=3 target_size=0
a 0 1
b 1 1
c 2 1
----
parts=3 len=3

fetch-batch input=b0
----
<part 0>
a 0 1
<part 1>
b 1 1
<part 2>
c 2 1
<run 0>
part 0
part 1
part 2

write-batch output=b1 lower=3 upper=6 target_size=0
a 3 1
b 4 1
c 5 1
----
parts=3 len=3

fetch-batch input=b1
----
<part 0>
a 3 1
<part 1>
b 4 1
<part 2>
c 5 1
<run 0>
part 0
part 1
part 2

compact output=b0_1 inputs=(b0,b1) lower=0 upper=6 since=6
----
parts=1 len=3

fetch-batch input=b0_1
----
<part 0>
a 6 2
b 6 2
c 6 2
<run 0>
part 0
