# Batches start empty
spine-batches
----
<empty>

# Insert a len=1 batch.
push-batch
[0][1][0] 1 k0
----
ok

spine-batches
----
[0-1][0][1][0] 1 k0

take-merge-reqs
----
<empty>

# Insert more len=1 batches.
push-batch
[1][2][0] 1 k1
[2][3][0] 1 k2
[3][4][0] 1 k3
[4][5][0] 1 k4
[5][6][0] 1 k5
[6][7][0] 1 k6
[7][8][0] 1 k7
----
ok

spine-batches
----
[0-4][0][4][0] 4/4 k0 k1 k2 k3
[4-6][4][6][0] 2/2 k4 k5
[6-7][6][7][0] 1 k6
[7-8][7][8][0] 1 k7

take-merge-reqs
----
[0][2][0] k0 k1
[0][4][0] k0 k1 k2 k3
[4][6][0] k4 k5

# Insert a large batch, which because of spine's invariants, must be inserted at
# a higher level. This causes the len=1 batches to smash together at the level
# above it and generate a merge.
push-batch
[8][9][0] 100 k8
----
ok

spine-batches
----
[0-8][0][8][0] 8/8 k0 k1 k2 k3 k4 k5 k6 k7
[8-9][8][9][0] 100 k8

take-merge-reqs
----
[0][8][0] k0 k1 k2 k3 k4 k5 k6 k7

# Successfully apply a merge res
apply-merge-res
[0][8][0] 5 k0-7
----
applied exact

spine-batches
----
[0-8][0][8][0] 5 k0-7
[8-9][8][9][0] 100 k8
