parse-statement
CREATE TYPE custom AS MAP (key_type=text, value_type=bool)
----
CREATE TYPE custom AS MAP ( KEY_TYPE = text, VALUE_TYPE = boolean )
=>
CreateMapType(CreateMapTypeStatement { name: Ident("custom"), key_typ: Text, value_typ: Boolean })

parse-statement
CREATE TYPE custom AS MAP (key_type=text)
----
error:
