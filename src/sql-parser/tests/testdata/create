CREATE TYPE custom AS MAP (key_type=text, value_type=bool)
----
CREATE TYPE custom AS MAP ( key_type = text, value_type = bool )
=>
CreateMapType(CreateMapTypeStatement { name: Ident("custom"), key: Ident { name: Ident("key_type"), ident: Ident("text") }, value: Ident { name: Ident("value_type"), ident: Ident("bool") } })

