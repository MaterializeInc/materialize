parse-statement
SELECT 1, 2, FROM a
----
error: expected expression, but found reserved keyword
SELECT 1, 2, FROM a
             ^

parse-statement
UPDATE t WHERE 1
----
error: Expected SET, found WHERE
UPDATE t WHERE 1
         ^

parse-statement
UPDATE t SET a = 1 extrabadstuff
----
error: Expected end of statement, found identifier "extrabadstuff"
UPDATE t SET a = 1 extrabadstuff
                   ^

parse-statement
SELECT ALL DISTINCT name FROM customer
----
error: Cannot specify both ALL and DISTINCT in SELECT
SELECT ALL DISTINCT name FROM customer
           ^

parse-statement
INSERT public.customer (id, name, active) VALUES (1, 2, 3)
----
error: Expected INTO, found identifier "public"
INSERT public.customer (id, name, active) VALUES (1, 2, 3)
       ^

parse-statement
SELECT foo AS
----
error: Expected an identifier after AS, found EOF
SELECT foo AS
             ^

parse-statement
SELECT 1 FROM foo AS
----
error: Expected an identifier after AS, found EOF
SELECT 1 FROM foo AS
                    ^

parse-statement
SELECT count(ALL DISTINCT + x) FROM customer
----
error: Cannot specify both ALL and DISTINCT in function: count
SELECT count(ALL DISTINCT + x) FROM customer
                 ^

parse-statement
SELECT INTERVAL '01:01.01' MINUTE (5) TO SECOND (5)
----
error: Expected end of statement, found left parenthesis
SELECT INTERVAL '01:01.01' MINUTE (5) TO SECOND (5)
                                  ^

parse-statement
SELECT 1 WHERE 1 < ANY SELECT 2
----
error: Expected left parenthesis, found SELECT
SELECT 1 WHERE 1 < ANY SELECT 2
                       ^

parse-statement
SELECT 1 WHERE 1 < NONE (SELECT 2)
----
error: expected expression, but found reserved keyword
SELECT 1 WHERE 1 < NONE (SELECT 2)
                         ^

parse-statement
SELECT 1 WHERE 1 < ANY (SELECT 2
----
error: Expected right parenthesis, found EOF
SELECT 1 WHERE 1 < ANY (SELECT 2
                                ^

parse-statement
SELECT 1 WHERE 1 + ANY (SELECT 2)
----
SELECT 1 WHERE 1 +ANY (SELECT 2)
=>
Select(SelectStatement { query: Query { ctes: Simple([]), body: Select(Select { distinct: None, projection: [Expr { expr: Value(Number("1")), alias: None }], from: [], selection: Some(AnySubquery { left: Value(Number("1")), op: Op { namespace: [], op: "+" }, right: Query { ctes: Simple([]), body: Select(Select { distinct: None, projection: [Expr { expr: Value(Number("2")), alias: None }], from: [], selection: None, group_by: [], having: None, options: [] }), order_by: [], limit: None, offset: None } }), group_by: [], having: None, options: [] }), order_by: [], limit: None, offset: None }, as_of: None })

parse-statement
SELECT EXISTS (NULL)
----
error: Expected SELECT, VALUES, or a subquery in the query body, found NULL
SELECT EXISTS (NULL)
               ^

parse-statement
SELECT SELECT 1 FROM bar WHERE 1=1 FROM baz
----
error: Expected end of statement, found SELECT
SELECT SELECT 1 FROM bar WHERE 1=1 FROM baz
       ^

