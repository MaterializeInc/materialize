cat
(defsource x [int64 int64])
----
ok

cat
(defsource y [int64 int64])
----
ok

build
(join
  [(get x)
   (filter
     (join [(get x) (get y)] [[#0 #2]])
     [#1])]
   [[#0 #2]])
----
----
%0 =
| Get x (u0)

%1 =
| Get x (u0)

%2 =
| Get y (u1)

%3 =
| Join %1 %2 (= #0 #2)
| | implementation = Unimplemented
| Filter #1

%4 =
| Join %0 %3 (= #0 #2)
| | implementation = Unimplemented
----
----

build apply=JoinFusion
(join
  [(get x)
   (filter
     (join [(get x) (get y)] [[#0 #2]])
     [#1])]
   [[#0 #2]])
----
----
%0 =
| Get x (u0)

%1 =
| Get x (u0)

%2 =
| Get y (u1)

%3 =
| Join %0 %1 %2 (= #0 #2 #4)
| | implementation = Unimplemented
| Filter #3
----
----
