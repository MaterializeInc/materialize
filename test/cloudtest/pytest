# pytest â€” runs pytest with Materialize customizations.
set -euo pipefail

REPO_ROOT="$(dirname "$0")"/../../

CLUSTERS=$(kind get clusters 2>/dev/null)
if [ "$CLUSTERS" == "" ]; then
    echo "No kind clusters found; creating..."
    kind create cluster --config="$REPO_ROOT/misc/kind/cluster.yaml"
fi

exec "$REPO_ROOT/bin/pytest" "$@"
