$ set schema={
    "type": "record",
    "name": "envelope",
    "fields": [
      {
        "name": "before",
        "type": [
          "null",
          {
            "type": "record",
            "name": "row",
            "fields": [
              {
                "name": "quote",
                "type": "string"
              },
              {
                "name": "val",
                "type": "long"
              }
            ]
          }
        ]
      },
      {
        "name": "after",
        "type": [
          "null",
          {
            "type": "record",
            "name": "row",
            "fields": [
              {
                "name": "quote",
                "type": "string"
              },
              {
                "name": "val",
