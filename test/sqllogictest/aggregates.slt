----
1 2
2 3
3 4

query T multiline
EXPLAIN PLAN FOR SELECT a, sum(b) from agg_pk group by a
----
%0 =
| Get materialize.public.agg_pk (u5)
| Map i32toi64(#1)
| Project (#0, #3)

EOF

query II
SELECT a, sum(c) from agg_pk group by a order by a
----
1 3
2 4
3 5

query T multiline
EXPLAIN PLAN FOR SELECT a, sum(c) from agg_pk group by a
----
%0 =
| Get materialize.public.agg_pk (u5)
| Map i64tonumeric(#2)
| Project (#0, #3)

EOF

