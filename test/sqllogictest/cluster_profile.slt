default  r1  1
mz_introspection  r1  1
mz_system  r1  1

# Ensure that identifiers are correctly handled in value position, even when
# they can't be printed bare. We previously had a bug where `"1"` was
# incorrectly parsed as size `"1"` (quotes included), but `"small"` was parsed
# as size `small` (quotes excluded).
statement ok
CREATE CLUSTER PROFILE cl.foo4 REPLICAS (d (SIZE "1"))

statement ok
DROP CLUSTER PROFILE cl.foo, cl.foo2, cl.foo3, cl.foo4

statement ok
CREATE CLUSTER PROFILE cl.bar REPLICAS ()

statement error invalid SIZE: must provide a string value
CREATE CLUSTER REPLICA cl.size_1 IN PROFILE bar SIZE;

statement ok
CREATE CLUSTER REPLICA cl.size_1 IN PROFILE bar SIZE '1';

