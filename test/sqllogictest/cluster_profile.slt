# Basic tests of the `CREATE CLUSTER` and `DROP CLUSTER` DDL statements.

mode cockroach

# Start from a pristine state
reset-server

simple conn=mz_system,user=mz_system
ALTER SYSTEM SET enable_unmanaged_cluster_replicas = on;
----
COMPLETE 0

statement error db error: ERROR: Expected one of AVAILABILITY or DISK or IDLE or INTROSPECTION or MANAGED or REPLICAS or REPLICATION or SIZE, found EOF
CREATE CLUSTER foo

statement ok
CREATE CLUSTER cl REPLICAS ()

statement error db error: ERROR: cluster profiles is not supported
CREATE CLUSTER PROFILE cl.foo REPLICAS ()

simple conn=mz_system,user=mz_system
ALTER SYSTEM SET enable_cluster_profiles = on;
----
COMPLETE 0

statement ok
CREATE CLUSTER PROFILE cl.foo REPLICAS ()

statement error db error: ERROR: unknown cluster item 'bar'
ALTER CLUSTER PROFILE cl.bar RENAME TO bar

statement ok
ALTER CLUSTER PROFILE cl.foo RENAME TO bar

statement error db error: ERROR: unknown cluster item 'foo'
ALTER CLUSTER PROFILE cl.foo RENAME TO bar

statement ok
ALTER CLUSTER PROFILE IF EXISTS cl.bar RENAME TO foo

statement ok
ALTER CLUSTER PROFILE IF EXISTS cl.bar RENAME TO foo

statement ok
CREATE CLUSTER PROFILE cl.bar REPLICAS ()

statement error db error: ERROR: Expected one of OWNER or RENAME or RESET or SET, found dot
ALTER CLUSTER cl.foo RENAME TO bar

statement ok
DROP CLUSTER PROFILE cl.foo

statement ok
DROP CLUSTER PROFILE cl.bar

statement error REPLICAS specified more than once
CREATE CLUSTER PROFILE cl.foo REPLICAS (), REPLICAS()

# Creating cluster w/ remote replica works.
statement ok
CREATE CLUSTER PROFILE cl.foo REPLICAS (r1 (STORAGECTL ADDRESSES ['s:1234'], STORAGE ADDRESSES ['st:1235'], COMPUTECTL ADDRESSES ['c:1234'], COMPUTE ADDRESSES ['ct:1235']))

statement error db error: ERROR: cannot create multiple replicas named 'foo' on cluster 'cl'
CREATE CLUSTER PROFILE cl.foo REPLICAS (r1 (SIZE '1'))

statement error db error: ERROR: cannot create multiple replicas named 'r1' on cluster 'cl'
CREATE CLUSTER PROFILE cl.bar REPLICAS (r1 (SIZE '1'), r1 (SIZE '1'))

statement error COMPUTE ADDRESSES specified more than once
CREATE CLUSTER PROFILE cl.bar REPLICAS (r1 (COMPUTE ADDRESSES ['localhost:1235'], COMPUTE ADDRESSES ['localhost:1234']))

statement error db error: ERROR: cannot create multiple replicas named 'r1' on cluster 'cl'
CREATE CLUSTER PROFILE cl.bar REPLICAS (r1 (SIZE '1'), r2 (SIZE '1'))

statement ok
CREATE CLUSTER PROFILE cl.bar REPLICAS (bar_r1 (SIZE '1'), bar_r2 (SIZE '1'))

