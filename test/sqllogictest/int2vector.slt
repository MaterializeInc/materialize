query TII
SELECT
	l.b::text, l.a, r.a
FROM
	(
		SELECT
			5 AS a,
			ARRAY (SELECT * FROM (VALUES ('1 2'::INT2VECTOR), ('3 4')))
				AS b
	)
		AS l
	JOIN (SELECT 6 AS a, '{1 2, 3 4}'::INT2VECTOR[] AS b) AS r ON
			l.b = r.b;
----
{"1 2","3 4"}
5
6
