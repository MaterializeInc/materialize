mode standard

# test SHOW CREATE for pg_matviews
query TT
SHOW CREATE VIEW pg_matviews
----
pg_catalog.pg_matviews
CREATE VIEW "pg_catalog"."pg_matviews" AS SELECT "s"."name" AS "schemaname", "m"."name" AS "matviewname", NULL::"pg_catalog"."oid" AS "matviewowner", "m"."definition" AS "definition" FROM "mz_catalog"."mz_materialized_views" AS "m" LEFT JOIN "mz_catalog"."mz_schemas" AS "s" ON "s"."id" = "m"."schema_id" LEFT JOIN "mz_catalog"."mz_databases" AS "d" ON "d"."id" = "s"."database_id" WHERE "d"."name" = "pg_catalog"."current_database"()
