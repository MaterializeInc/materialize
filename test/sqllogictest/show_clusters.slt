# Test for `SHOW CLUSTERS`.

mode standard

# Start from a pristine state
reset-server

simple conn=mz_system,user=mz_system
ALTER SYSTEM SET enable_unorchestrated_cluster_replicas = on;
----
COMPLETE 0

statement ok
CREATE CLUSTER foo REPLICAS ()

statement ok
CREATE CLUSTER bar REPLICAS (r1 (SIZE '1'), r2 (SIZE '1'))

query TT rowsort
SELECT name, replicas FROM (SHOW CLUSTERS)
----
bar
r1 (1), r2 (1)
foo
NULL
mz_introspection
r1 (2)
mz_system
r1 (2)
quickstart
r1 (2)
