mode cockroach

# Start from a pristine server
reset-server

statement ok
CREATE SCHEMA foo
----

statement ok
CREATE SOURCE foo.auction FROM LOAD GENERATOR AUCTION FOR ALL TABLES WITH (SIZE '1');

query TTT
SHOW SOURCES FROM foo;
