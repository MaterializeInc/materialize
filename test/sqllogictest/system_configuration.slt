mode cockroach

query TT rowsort
SELECT * FROM mz_system_configuration;
----

statement ok
ALTER SYSTEM SET wal_level TO logical

query TT rowsort
SELECT * FROM mz_system_configuration;
----
wal_level   'logical'

statement ok
ALTER SYSTEM SET wal_level = 'physical'

query TT rowsort
SELECT * FROM mz_system_configuration;
----
wal_level   'physical'

statement ok
ALTER SYSTEM SET shared_buffers = 5

query TT rowsort
SELECT * FROM mz_system_configuration;
----
shared_buffers  5
wal_level       'physical'

statement ok
ALTER SYSTEM SET replication_enabled = false

query TT rowsort
SELECT * FROM mz_system_configuration;
----
shared_buffers      5
wal_level           'physical'
replication_enabled false

