# Test that POSIX is used for timezone() and AT TIME ZONE.

query T
SELECT timezone('+5', '0001-01-01 12:00:00 +6'::TIMESTAMPTZ);
----
0001-01-01 01:00:00

query T
SELECT '0001-01-01 12:00:00 +6'::TIMESTAMPTZ AT TIME ZONE '+5';
----
0001-01-01 01:00:00

query T
SELECT timezone('-5', '0001-01-01 12:00:00 -6'::TIMESTAMPTZ);
----
0001-01-01 23:00:00

query T
SELECT '0001-01-01 12:00:00 -6'::TIMESTAMPTZ AT TIME ZONE '-5';
----
0001-01-01 23:00:00

