simple
DECLARE c CURSOR FOR SUBSCRIBE t;
FETCH 0 c;
DECLARE d CURSOR FOR SUBSCRIBE t;
FETCH 0 d;
----
db error: ERROR: SUBSCRIBE in transactions must be the only read statement

simple
DECLARE c CURSOR FOR SUBSCRIBE t;
FETCH 0 c;
SELECT * FROM t LIMIT 0;
----
db error: ERROR: SUBSCRIBE in transactions must be the only read statement

simple
SELECT * FROM t LIMIT 0;
DECLARE c CURSOR FOR SUBSCRIBE t;
FETCH 0 c;
