statement ok
CREATE TABLE t_data (f1 TEXT);

statement ok
INSERT INTO t_data VALUES ('ABCDEF'), ('abcdef'), ('aBcDeF'), ('AbCdEf');

query T
SELECT * FROM t_data
WHERE f1 ILIKE '%bCd%'
ORDER BY f1;
