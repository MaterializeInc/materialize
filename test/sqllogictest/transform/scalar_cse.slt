    Map (text_to_jsonb(#0), (#2 -> "Field1"), (#2 -> "Field2"), (#2 -> "Field3")) // { arity: 6 }
      ReadStorage materialize.public.x // { arity: 2 }

EOF

query T multiline
EXPLAIN WITH(arity, join_impls) SELECT
