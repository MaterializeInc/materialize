statement ok
CREATE SOURCE webhook_json_include_headers IN CLUSTER webhook_cluster FROM WEBHOOK
    BODY FORMAT JSON
    INCLUDE HEADERS

query TTT
SHOW COLUMNS FROM webhook_json_include_headers
----
